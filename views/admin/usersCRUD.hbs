<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
<a  href="/admin/users"> ðŸ”™ Back to the list</a>
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Editar usuario</p>

                <form
                  class="mx-1 mx-md-4"
                  action="/users/{{this._id}}/edit"
                  method="post"
                >

               
                 
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0"> {{! nombre }}
                         {{#if this.errorFullfillMessage}}
                        <b class="error">{{this.errorFullfillMessage}}</b>
                      {{/if}}
                      {{#if this.firstName}}
                       <input
                       required
                        type="text"
                        id="form3Example1c"
                        class="form-control"
                        name="firstName"
                        value="{{this.firstName}}"
                      />
                      {{else}}
                      
                      <input 
                      required
                        type="text"
                        id="form3Example1c"
                        class="form-control"
                        name="firstName"
                      />
                      {{/if}}
                      <label class="form-label" for="form3Example1c">Your Name</label>
                    </div>
                  </div>
                  {{! apellido }}
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      {{#if this.lastName}}
                      <input
                      required
                        type="text"
                        id="form3Example1c"
                        class="form-control"
                        name="lastName"
                        value="{{this.lastName}}"
                      />
                       {{else}}
                      <input
                      required
                        type="text"
                        id="form3Example1c"
                        class="form-control"
                        name="lastName"
                      />
                      {{/if}}

                      <label class="form-label" for="form3Example1c">Your
                        lastname</label>
                    </div>
                  </div>
                  {{! telefono }}
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      {{#if this.phone}}
                      <input
                        type="number"
                        id="form3Example1c"
                        class="form-control"
                        name="phone"
                        value="{{this.phone}}"
                      />
                      {{else}}
                      <input
                        type="number"
                        id="form3Example1c"
                        class="form-control"
                        name="phone"
                        value="{{this.phone}}"
                      />
                      {{/if}}
                      <label class="form-label" for="form3Example1c">Your phone
                        number</label>
                    </div>
                  </div>
                  {{! edad }}
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      {{#if this.age}}
                      <input
                        type="number"
                        id="form3Example1c"
                        class="form-control"
                        name="age"
                        value="{{this.age}}"
                      />
                      {{else}}
                      <input
                        type="number"
                        id="form3Example1c"
                        class="form-control"
                        name="age"
                      />
                      {{/if}}
                      <label class="form-label" for="form3Example1c">Your age</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      {{#if this.email}}
                      <input
                      required
                        type="email"
                        id="form3Example3c"
                        class="form-control"
                        name="email"
                        value="{{this.email}}"
                      />
                      {{else}}
                      <input
                      required
                        type="email"
                        id="form3Example3c"
                        class="form-control"
                        name="email"
                      />
                      {{/if}}
                      <label class="form-label" for="form3Example3c">Your Email</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        {{#if this.educativeLevel}}<select name="educativeLevel" class="form-select" aria-label="Default select example" aria-placeholder="{{this.educativeLevel}}">
                        <option selected>Open this select menu</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                    {{else}}
                      <input
                        type="text"
                        id="form3Example4c"
                        class="form-control"
                        name="educativeLevel"
                        value="{{this.educativeLevel}}"
                      />
                      
                      




                      <input
                        type="text"
                        id="form3Example4c"
                        class="form-control"
                        name="educativeLevel"
                      />
                      {{/if}}
                      <label
                        class="form-label"
                        for="form3Example4c"
                      >Educative level</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">

                      <input
                        type="password"
                        id="form3Example4cd"
                        class="form-control"
                        name="secondPassword"
                        
                      />
                       <label class="form-label" for="form3Example4cd">Repeat
                        your password</label>
                        <br>
                      {{#if this.erroMatchrPaswordMessage}}
                        <b class="error">{{this.erroMatchrPaswordMessage}}</b>
                      {{/if}}
                      {{#if this.errorPassRegexMessage}}
                        <b class="error">{{this.errorPassRegexMessage}}</b>
                      {{/if}}
                      {{#if this.errorMailRegexMessage}}
                        <b class="error">{{this.errorMailRegexMessage}}</b>
                      {{/if}}
                      

                     
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button
                      type="submit"
                      class="btn btn-warning btn-lg"
                    >Confirm Changes</button>
                    
                  </div>

                </form>

              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

