<div class="container">
  <form
    class="text-center border border-light p-5"
    method="post"
    enctype="multipart/form-data"
    action="/content/{{courseId}}/add"
  >

    <p class="h4 mb-4">Add content</p>
    <div class="form-outline mb-4">
      <label class="form-label" for="name">Name</label>
      <input type="text" class="form-control" name="name" required />
    </div>
    <div class="form-outline mb-4">
      <label class="form-label" for="description">Description</label>
      <input type="textarea" class="form-control" name="description" required />
    </div>
    <div class="form-outline mb-4">
      <label class="form-label" for="contentData">File</label>
      <input type="file" class="form-control" name="contentData" />
    </div>
    <div class="form-outline mb-4">
      <label class="form-label" for="contentType">Content Type</label>
      <select
        class="form-select"
        aria-label="Default select example"
        name="contentType"
      >
        <option value="jpeg">jpeg</option>
        <option value="pdf">pdf</option>
        <option value="png">png</option>
      </select>
    </div>
    <div class="form-outline mb-4">
      <label class="form-label" for="visibility">Visible</label>
      <select
        class="form-select"
        aria-label="Default select example"
        name="visibility"
      >
        <option value="true">True</option>
        <option value="false">False</option>
      </select>
    </div>
    <div class="form-outline mb-4">
      <label class="form-label" for="isHighlighted">Highlighted</label>
      <select
        class="form-select"
        aria-label="Default select example"
        name="isHighlighted"
      >
        <option value="true">True</option>
        <option value="false">False</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block mb-4">Add</button>
  </form>
</div>