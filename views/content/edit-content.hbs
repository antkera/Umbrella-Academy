<form
  class="text-center border border-light p-5"
  method="post"
  enctype="multipart/form-data"
  action="/content/{{oneContent._id}}/edit"
>

  <p class="h4 mb-4">Edit content</p>
  <div class="form-outline mb-4">
    <label class="form-label" for="name">Name</label>
    <input
      type="text"
      class="form-control"
      name="name"
      value="{{oneContent.name}}"
      required
    />
  </div>
  <div class="form-outline mb-4">
    <label class="form-label" for="description">Description</label>
    <input
      type="textarea"
      class="form-control"
      name="description"
      value="{{oneContent.description}}"
      required
    />
  </div>
  <div class="form-outline mb-4">
    <label class="form-label" for="contentData">File</label>
    <input type="file" class="form-control" name="contentData" />
    <p><embed
        src="{{oneContent.contentData}}"
        type="application/pdf"
        height="400px"
        width="100%"
      /></p>
  </div>
  <div class="form-outline mb-4">
    <label class="form-label" for="contentType">Content Type</label>
    <select
      class="form-select"
      aria-label="Default select example"
      name="contentType"
    >
      <option value="jpg">jpg</option>
      <option value="pdf">pdf</option>
      <option value="png">png</option>
    </select>
  </div>
  <div class="form-outline mb-4">
    <label class="form-label" for="visibility">Visible</label>
    <select
      class="form-select"
      aria-label="Default select example"
      name="visibility"
    >
      <option value="true">True</option>
      <option value="false">False</option>
    </select>
  </div>
  <div class="form-outline mb-4">
    <label class="form-label" for="isHighlighted">Highlighted</label>
    <select
      class="form-select"
      aria-label="Default select example"
      name="isHighlighted"
    >
      <option value="true">True</option>
      <option value="false">False</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary btn-block mb-4">Edit</button>
</form>