<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  </head>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="/images/Umbrella_Academy_logo.png" alt="Logo" height="36" />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          {{#if isSessionActive}}
            {{#if isStudentSession}}
              <li class="nav-items">
                <a class="nav-link" href="/student/courses">Courses</a>
              </li>
            {{/if}}
            {{#if isTeacherSession}}
              <li class="nav-items">
                <a class="nav-link" href="/teacher/courses">Courses</a>
              </li>
            {{/if}}
            {{#if isAdminSession}}
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  data-bs-toggle="dropdown"
                >Administration</a>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="/admin/courses">Courses
                      administration</a></li>
                  <li><a class="dropdown-item" href="/admin/users">Users
                      administration</a></li>
                  <li><a
                      class="dropdown-item"
                      href="/admin/enrollment/list"
                    >Enrolments administration</a></li>
                  <li><a
                      class="dropdown-item"
                      href="/teacher/content/list"
                    >Content administration</a></li>
                </ul>
              </li>
            {{/if}}
            <li class="nav-items">
              <a class="nav-link" href="/">Profile</a>
            </li>
            <li class="nav-items">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
          {{else}}
            <li class="nav-items">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
            <li class="nav-items">
              <a class="nav-link" href="/auth/register">Register</a>
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
  {{#if isAdminSession}}
    <div class="admin">
      {{{body}}}
    </div>
  {{else}}
    {{#if isTeacherSession}}
      <div class="teacher">
        {{{body}}}
      </div>
    {{else}}
      {{#if isStudentSession}}
        <div class="student">
          {{{body}}}
        </div>
      {{else}}
        <div class="user">
          {{{body}}}
        </div>
      {{/if}}
    {{/if}}
  {{/if}}

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"
  ></script>
  <script src="/js/script.js"></script>
</html>