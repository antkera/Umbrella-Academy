<!-- Course Content -->
<div class="container mt-4">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">
      <div class="list-group" id="sidebar">
        <a
          href="#"
          class="list-group-item list-group-item-action"
          data-section="section1"
        >Section 1</a>
        <a
          href="#"
          class="list-group-item list-group-item-action"
          data-section="section2"
        >Section 2</a>
        <a
