<h3>Lista de Enrollments<a href="/admin/enrollment/create">
    <button type="submit" class="btn btn-outline-success active"><i
        class="bi bi-plus"
      ></i></button></a></h3>
<table class="table">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Course Name</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each enrollments}}
      <tr>
        <th scope="row">{{this.userId.firstName}}</th>
        <td>{{this.userId.lastName}}</td>
        <td>{{this.userId.email}}</td>
        <td>{{this.roleInCourse}}</td>
        <td>{{this.courseId.name}}</td>
        <td>
          <div
            class="btn-group"
            role="group"
            aria-label="Basic outlined example"
          >
            <a href="/admin/enrollment/{{this._id}}/details/">
              <button
                type="submit"
                class="btn btn-outline-primary separed"
              >Detail</button></a>
            <a href="/admin/enrollment/{{this._id}}/edit/">
              <button
                type="submit"
                class="btn btn-outline-warning separed"
              >Edit</button></a>
            <div>
              <button
                type="submit"
                class="btn btn-outline-danger"
                data-bs-toggle="modal"
                data-bs-target="#delete-enrolments{{this._id}}"
              ><i class="bi bi-trash"></i> elim</button>

              <div class="container">
                <div
                  id="delete-enrolments{{this._id}}"
                  class="modal"
                  tabindex="-1"
                >
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title">
                          Are you sure you want to delete this enrollment?
                        </h5>
                      </div>
                      <div class="modal-body">
                        <form
                          action="/admin/enrollment/{{this._id}}/delete/"
                          method="post"
                        ><a href=""><button
                              type="submit"
                              class="btn btn-danger separed"
                            >Delete</button></a></form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>