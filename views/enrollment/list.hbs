<h3>Lista de Enrollments</h3>
<a href="/admin/enrollment/create">
  <button type="submit" class="btn btn-outline-success active">Add</button></a>
<li class="list-group-item"><b>Lista de matr√≠culas</b></li>

<div id=" searchbar">
  <form action="/admin/enrolments/search" method="get">
    <button class="btn btn-outline-info " type="submit">Search</button>
    <select class="form-select form-select-lg mb-3" name="roleInCourse" id="">
      <option value="manager">Manager</option>
      <option value="editingteacher">editingteacher</option>
      <option defaul value="student">student</option>
      <option value="teacher">teacher</option>
    </select>
  </form>
</div>

<ul>
  {{#each this.enrollments}}
    <li class="list-group-item">{{this.userId.firstName}}
      ({{this.roleInCourse}})
      <br />
      {{this.courseId.name}}</li>
    <div class="btn-group" role="group" aria-label="Basic outlined example">
      <a href="/admin/enrollment/{{this._id}}/details/">
        <button
          type="submit"
          class="btn btn-outline-primary separed"
        >Detail</button></a>
      <a href="/admin/enrollment/{{this._id}}/edit/">
        <button type="submit" class="btn btn-outline-warning separed">Edit</button></a>
        <div>
         <button
            type="submit"
            class="btn btn-outline-danger"
            data-bs-toggle="modal"
            data-bs-target="#delete-enrolments{{this._id}}"
          ><i class="bi bi-trash"></i> elim</button>
        
        <div class="container">
            <div id="delete-enrolments{{this._id}}" class="modal" tabindex="-1">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">
                      Are you sure you want to delete this enrollment?
                    </h5>
                  </div>
                  <div class="modal-body">
                    <form
              action="/admin/enrollment/{{this._id}}/delete/"
              method="post"
            ><a href=""><button
                  type="submit"
                  class="btn btn-danger separed"
                >Delete</button></a></form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        
        

      </div>
    </div>
  {{/each}}
  
</ul>